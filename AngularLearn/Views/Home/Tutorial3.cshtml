@{
    ViewBag.Title = "Tutorial3";
    
    /*
     * In this example, the controller is bound in the html tag inside _Layout.cshtml
     * because a model is bound to the title tag.
     */
}

<div class="container-fluid" style="margin-top:10px;">
    <div class="row-fluid">
        <div class="span12">
            <h4>http://docs.angularjs.org/tutorial/step_03</h4>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <!--Sidebar content-->
            Search: <input ng-model="query">
            <div>{{query}}</div>
        </div>
        <div class="span10">
            <ul class="phones">
            <li ng-repeat="phone in phones | filter:query">
                {{phone.name}}
                <p>{{phone.snippet}}</p>
            </li>
            </ul>
        </div>
    </div>
</div>

<script>
    function PhoneListCtrl($scope) {
        $scope.phones = [
            {
                "name": "Nexus S",
                "snippet": "Fast just got faster with Nexus S."
            },
            {
                "name": "Motorola XOOM™ with Wi-Fi",
                "snippet": "The Next, Next Generation tablet."
            },
            {
                "name": "MOTOROLA XOOM™",
                "snippet": "The Next, Next Generation tablet."
            }
        ];

        $scope.hello = "Hello world!";

        $scope.helloName = function (name) {
            return "Hello " + name;
        };
    }
</script>